%p#notice= notice

.page-header
  %h1
    = @person.full_name
    %small
      = @person.age
      - if @person.age % 10 == 1
        = t('.year_1')
      - elsif (2..4).includes? @person.age % 10
        = t('.year_2-4')
      - else
        = t('.year_other')

  .btn-group
    = link_to people_path, class: 'btn' do
      %i.icon-list
      = t('people.index.title')
    = link_to edit_person_path(@person), class: 'btn' do
      %i.icon-edit
      = t('actions.edit')
    = link_to @person, method: :delete, class: 'btn btn-danger', confirm: t('remove_confirm') do
      %i.icon-remove.icon-white
      = t('actions.remove')

= render partial: 'alerts', locals: { person: @person }
= render partial: 'legal_information', locals: { person: @person }

%h3 Локации
= render partial: 'locations/grid', locals: { locations: @person.locations }
= link_to new_person_location_path(@person), class: 'btn' do
  %i.icon-plus-sign
  Добавить локацию

%h3 Медикаменты
= render partial: 'medications/grid', locals: { medications: @person.medications }
= link_to new_person_medication_path(@person), class: 'btn' do
  %i.icon-plus-sign
  Добавить медикамент

%h3 Аллергии
= render partial: 'allergies/grid', locals: { allergies: @person.allergies }
= link_to new_person_allergy_path(@person), class: 'btn' do
  %i.icon-plus-sign
  Добавить аллергию

%h3 Экстренные контакты
= render partial: 'emergency_contacts/grid', locals: { emergency_contacts: @person.emergency_contacts }
= link_to new_person_emergency_contact_path(@person), class: 'btn' do
  %i.icon-plus-sign
  Добавить экстренный контакт
