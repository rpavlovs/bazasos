.well
  .row
    .span3
      %h4= location.description
      - if location.is_registration
        %br
        .label.label-info Место прописки
      - if location.is_residence
        %br
        .label.label-success Место проживания
      %br
      = link_to 'Редактировать', edit_person_location_path(location.person, location), class: 'btn btn-mini'
      = link_to 'Удалить', location, method: :delete, confirm: 'Это необратимая операция. Вы уверены?',
        class: 'btn btn-danger btn-mini'
    .span7
      %dl
        %dt Адрес
        %dd= [location.region, location.city, location.postal_code, location.address].compact.join(', ')
        - if location.phone_number
          %dt Телефон
          %dd= location.phone_number
        - if location.comment
          %dt Комментарий
          %dd= location.comment
