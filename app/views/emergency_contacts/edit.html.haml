%h1
  = @emergency_contact.persisted? ? t('actions.editing') : t('actions.adding')
  = t('.model_name_for_title')

= simple_form_for [@person, @emergency_contact], html: {class: 'form-horizontal'} do |f|
  = f.input :name
  = f.input :relationship_type
  = f.input :phones
  = f.input :priority, collection: options_for_priority
  .btn-group
    = f.button :submit, class: 'btn-primary', value: t('actions.save')
    = link_to t('actions.cancel'), @person, class: 'btn'
