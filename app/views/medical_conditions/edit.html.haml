%h1
  = @medical_condition.persisted? ? t('actions.editing') : t('actions.adding')
  = t('.model_name_for_title')

= simple_form_for [@person, @medical_condition], html: {class: 'form-horizontal'} do |f|
  = f.input :title
  = f.input :is_primary if @person.medical_conditions.primary.nil?
  .btn-group
    = f.button :submit, class: 'btn-primary', value: t('actions.save')
    = link_to t('actions.cancel'), @person, class: 'btn'
