!!! html
%html
  %head
    %title= full_title(yield(:title))
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = render 'layouts/shim'
  %body
    #wrap
      = render 'layouts/header'
      .container
        = yield
      #push
    = render 'layouts/footer'
    / = debug(params) if Rails.env.development?

